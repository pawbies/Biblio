<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
 

    <%= render @category %>

    <%= link_to "Kategorie Bearbeiten", edit_category_path(@category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Zurück zu Kategorien", categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Kategory Löschen", @category, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
