<div class="bg-white shadow rounded overflow-hidden text-center p-4" id="<%= dom_id category %>">

  <div class="h-24 w-24 bg-gray-200 rounded-full mx-auto flex items-center justify-center mb-4">
    <i class="fas fa-tag text-gray-500 text-3xl"></i>
  </div>


  <h3 class="text-lg font-semibold text-gray-800"><%= category.name %></h3>

  <p class="text-gray-500 mt-2 text-sm">
    <%= truncate(category.description, length: 100) %>
  </p>

  <div class="mt-4">
    <a href="<%= category_path(category) %>" class="text-blue-500 hover:underline text-sm flex items-center justify-center">
      <i class="fas fa-eye mr-2"></i> Kategorie anzeigen
    </a>
  </div>

</div>
