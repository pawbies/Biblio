<div id="<%= dom_id borrow %>" class="bg-white shadow rounded p-6 space-y-6">

  <!-- Borrow Details Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-800 border-b border-gray-300 pb-2">Ausleihdetails</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
      <div>
        <p class="text-gray-600"><strong>Ausleihdatum:</strong></p>
        <p class="text-gray-800"><%= borrow.borrow_date %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Rückgabedatum:</strong></p>
        <p class="text-gray-800"><%= borrow.return_date %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Tatsächliches Rückgabedatum:</strong></p>
        <p class="text-gray-800"><%= borrow.actual_return_date.presence || "Noch nicht zurückgegeben" %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Zurückgebracht:</strong></p>
        <p class="text-gray-800"><%= borrow.returned ? "Ja" : "Nein" %></p>
      </div>
    </div>
  </div>

  <!-- Books Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-800 border-b border-gray-300 pb-2">Bücher</h2>
    <ul class="mt-4 list-disc list-inside text-gray-800">
      <% borrow.books.each do |book| %>
        <li>
          <%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Librarian Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-800 border-b border-gray-300 pb-2">Bibliothekar</h2>
    <p class="mt-4 text-gray-800">
      <%= borrow.librarian.present? ? "#{borrow.librarian.firstname} #{borrow.librarian.lastname}" : "Keinem Bibliothekar zugewiesen" %>
    </p>
  </div>

  <!-- Borrower Information Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-800 border-b border-gray-300 pb-2">Ausleiher-Informationen</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
      <div>
        <p class="text-gray-600"><strong>Vorname:</strong></p>
        <p class="text-gray-800"><%= borrow.firstname %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Nachname:</strong></p>
        <p class="text-gray-800"><%= borrow.lastname %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Telefon:</strong></p>
        <p class="text-gray-800"><%= borrow.phone %></p>
      </div>
      <div>
        <p class="text-gray-600"><strong>Email:</strong></p>
        <p class="text-gray-800"><%= borrow.email %></p>
      </div>
    </div>
  </div>

</div>
