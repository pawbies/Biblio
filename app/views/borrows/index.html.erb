<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Borrows" %>

  <div class="flex justify-between items-center mb-3">
    <h1 class="font-bold text-4xl">Ausleihen</h1>
    <%= link_to "Neue Ausleihe", new_borrow_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table class="min-w-full divide-y divide-gray-200 table-fixed">
    <thead class="bg-gray-100">
      <tr>
        <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Rückgabedatum
        </th>
        <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Ausleihdatum
        </th>
        <th class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Ausleiher
          </th>
        <th class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Aktionen
        </th>
      <tr>
    </thead>
    <tbody class="bg-gray divide-y divide-gray-200">
      <% @borrows.each do |borrow| %>
        <tr class="hover:bg-gray-100">
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= borrow.return_date %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= borrow.borrow_date %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= "#{borrow.firstname} #{borrow.lastname}" %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap flex">
            <%= link_to "Ansehen", borrow, class: "py-4 px-2 text-sm font-medium text-green-500 whitespace-nowrap" %>
            <%= link_to "Abschließen", finish_borrow_path(borrow), class: "py-4 px-2 text-sm font-medium text-purple-500 whitespace-nowrap" %>
            <%= link_to "Bearbeiten", edit_borrow_path(borrow), class: "py-4 px-2 text-sm font-medium text-blue-500 whitespace-nowrap" %>
            <%= button_to "Löschen", borrow_path(borrow), method: :delete, class: "py-4 px-2 text-sm font-medium text-red-500 whitespace-nowrap" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
