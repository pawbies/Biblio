<div class="bg-white shadow rounded overflow-hidden mx-auto text-center p-6" id="<%= dom_id @category %>">
  
  <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= @category.name %></h2>
  <p class="text-gray-600 mb-6">
    <%= @category.description %>
  </p>

  <div class="space-y-4">
    <h3 class="text-xl font-semibold text-gray-800">Bücher in dieser Kategorie:</h3>
    
    <% if @category.books.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <%= render @category.books %>
      </div>
    <% else %>
      <p class="text-gray-500">Noch keine Bücher hinzugefügt.</p>
    <% end %>
  </div>
</div>