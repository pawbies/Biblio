<div class="w-full">

  <% content_for :title, "Archiv" %>

  <div class="flex justify-between items-center mb-3">
    <h1 class="font-bold text-4xl">Ausleihen-Archiv</h1>
  </div>

  <table class="min-w-full divide-y divide-gray-200 table-fixed">
    <thead class="bg-gray-100">
      <tr>
        <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Rückgabedatum
        </th>
        <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Tatsächlisches Rückgabedatum
        </th>
        <th class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Ausleiher
        </th>
        <th class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
          Aktionen
        </th>
      <tr>
    </thead>
    <tbody class="bg-gray divide-y divide-gray-200">
      <% @borrows.each do |borrow| %>
        <tr class="hover:bg-gray-100">
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= borrow.return_date %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= borrow.actual_return_date %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap"><%= "#{borrow.firstname} #{borrow.lastname}" %></td>
          <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap flex">
            <%= link_to "Ansehen", borrow, class: "py-4 px-2 text-sm font-medium text-green-500 whitespace-nowrap" %>
            <%= button_to "Löschen", borrow_path(borrow), method: :delete, data: { turbo_confirm: "Wirklich löschen?" }, class: "py-4 px-2 text-sm font-medium text-red-500 whitespace-nowrap" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @borrows %>
</div>
